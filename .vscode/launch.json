    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug with tsx",
            "runtimeExecutable": "npx",
            "runtimeArgs": ["tsx", "${relativeFile}"],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug with jest",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run","test"],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
